div
  .form-group(plug="widget")
    label.d-flex.align-items-end.flex-wrap
      div
        span(ld="label")
        span.text-danger.ml-2(ld="is-required") *
      .flex-grow-1
      .m-edit: .mf-note.text-sm(ld="limitation")
    .text-sm.text-muted: div(ld="desc", style="margin:-.6em 0 .7em")
    .m-edit(ld="input")
      div: label.mr-3.mb-3.clickable(ld-each="option")
        input.mr-1(ld="radio",type="radio")
        span(ld="text")
      div(ld="other"): label.clickable.d-flex.align-items-center
        input.mr-1(ld="other-radio",type="radio")
        .mr-2.text-nowrap(ld="other-prompt")
        input.form-control.form-control-sm(type="text",ld="other-text")

    .m-edit: .mf-note.text-sm.mt-2.note(ld-each="note")
    .m-view(ld="content")
  script(type="@plotdb/block"): include:lsc index.ls
